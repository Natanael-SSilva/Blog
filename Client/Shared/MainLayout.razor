@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Blog.Client.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Blog</MudText>
        <MudNavMenu Class="ml-6" Style="display: flex; gap: 20px;">
            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="admin" Icon="@Icons.Material.Filled.AdminPanelSettings">Admin</MudNavLink>
            <MudNavLink Href="fetchdata" Icon="@Icons.Material.Filled.List">Fetch Data</MudNavLink>
        </MudNavMenu>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Logout">Logout</MudButton>
            </Authorized>
            <NotAuthorized>
                <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/login">Login</MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private async Task Logout()
    {
        await ((CustomAuthStateProvider)AuthStateProvider).GetAuthenticationStateAsync();
        await new HttpClient().PostAsync($"{Navigation.BaseUri}api/auth/logout", null);
        ((CustomAuthStateProvider)AuthStateProvider).NotifyUserLogout();
        Navigation.NavigateTo("/");
    }
}